<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default Markdown style -->
    <style name="MarkyMarkStyle">
        <item name="android:textColorLink">?attr/colorPrimary</item>

        <item name="MarkdownCodeStyle">@style/MarkyMarkCode</item>
        <item name="MarkdownListStyle">@style/MarkyMarkList</item>
        <item name="MarkdownImageStyle">@style/MarkyMarkImage</item>
        <item name="MarkdownQuoteStyle">@style/MarkyMarkQuote</item>
        <item name="MarkdownParagraphStyle">@style/MarkyMarkParagraph</item>
        <item name="MarkdownHorizontalRuleStyle">@style/MarkyMarkHorizontalRule</item>

        <item name="MarkdownHeader1Style">@style/MarkyMarkHeader1</item>
        <item name="MarkdownHeader2Style">@style/MarkyMarkHeader2</item>
        <item name="MarkdownHeader3Style">@style/MarkyMarkHeader3</item>
        <item name="MarkdownHeader4Style">@style/MarkyMarkHeader4</item>
        <item name="MarkdownHeader5Style">@style/MarkyMarkHeader5</item>
        <item name="MarkdownHeader6Style">@style/MarkyMarkHeader6</item>
    </style>

    <!-- Default styles, can be used as parent when overriding -->
    <style name="MarkyMarkImage" />

    <style name="MarkyMarkQuote" />


    <style name="MarkyMarkParagraph">
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MarkyMarkCode">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MarkyMarkHorizontalRule">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">1dp</item>
    </style>

    <style name="MarkyMarkList">
        <item name="android:paddingBottom">35dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Header styles -->
    <style name="MarkyMarkHeader">
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="MarkyMarkHeader1" parent="MarkyMarkHeader">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MarkyMarkHeader2" parent="MarkyMarkHeader">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MarkyMarkHeader3" parent="MarkyMarkHeader">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MarkyMarkHeader4" parent="MarkyMarkHeader">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MarkyMarkHeader5" parent="MarkyMarkHeader">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MarkyMarkHeader6" parent="MarkyMarkHeader">
        <item name="android:textSize">10sp</item>
    </style>
</resources>
